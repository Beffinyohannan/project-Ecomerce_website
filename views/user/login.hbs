    <!-- ...:::: Start Customer Login Section :::... -->
    <div class="customer-login">
        <div class="container">
            <div class="row">

                <div class="login-page">
                    <div class="form">
                        {{#if numberPage}}
                        <form class="login-form" action="/otpNumber" method="post">
                            {{!-- {{#if loginErr}}
                            <p class="error">Invalid Username or Password</p>
                            {{/if}} --}}
                            <h3>please enter your Mobile Number</h3>
                            <input type="number" name="number" placeholder="number">
                            {{!-- <span id="loginEmail-error"></span> --}}
                            <button type="submit">Send OTP</button>
                            <span id="loginSubmit-error"></span>
                            <p class="message"> <a href="/login">Back To Login</a></p>
                        </form>
                        {{else if otpPage}}
                        <form class="login-form" action="/otpVerify" method="post">
                            {{!-- {{#if loginErr}}
                            <p class="error">Invalid Username or Password</p>
                            {{/if}} --}}
                            <h3>please enter your OTP</h3>
                            <input type="number" name="otp" placeholder="OTP">
                            {{!-- <span id="loginEmail-error"></span> --}}
                            <button type="submit">Verify</button>
                            <span id="loginSubmit-error"></span>
                            <p class="message"> <a href="/otpNumber">Back</a></p>
                        </form>
                        {{else if signup}}
                        <form class="login-form" action="/signup" method="post">
                            <h1>Register</h1>
                            <h3>please enter your details</h3>
                            <input type="text" name="name" id="signup-name" placeholder="name" onkeyup="validateName()">
                            <span id="name-error"></span>
                            <input type="email" name="email" id="signup-email" placeholder="email address"
                                onkeyup="validateEmail()">
                            <span id="email-error"></span>
                            <input type="number" name="number" id="signup-number" placeholder="phone number"
                                onkeyup="validateNumber()">
                            <span id="number-error"></span>
                            <input type="password" name="password" id="signup-password" placeholder="password"
                                onkeyup="validatePassword()">
                            <span id="password-error"></span>
                            <button type="submit" onclick="return validateForm()">create</button>
                            <span id="submit-error"></span>
                            <p class="message">Already registered? <a href="#">Sign In</a></p>
                        </form>
                        {{else}}
                        <form class="login-form" action="/logins" method="post">
                            {{#if loginErr}}
                            <p class="error">Invalid Username or Password</p>
                            {{/if}}
                            <h3>please enter your details</h3>
                            <input type="email" name="email" id="login-email" placeholder="email address"
                                onkeyup="validateEmailLogin()">
                            <span id="loginEmail-error"></span>
                            <input type="password" name="password" id="login-password" placeholder="password"
                                onkeyup="validatePasswordLogin()">
                            <span id="loginPassword-error"></span>
                            <button type="submit" onclick="return validateFormLogin()">login</button>
                            <span id="loginSubmit-error"></span>
                            <h5 style="margin-top: 10px;"> <a href="/otpNumber">Login with Mobile number</a> </h5>
                            <p class="message"> <a href="">Forgot password</a></p>
                            <p class="message">Not registered? <a href="/signup">Create an account</a></p>
                        </form>
                        {{/if}}
                    </div>
                </div>




            </div>
        </div>
    </div> <!-- ...:::: End Customer Login Section :::... -->


