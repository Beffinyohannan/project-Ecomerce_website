    <!-- ...:::: Start Wishlist Section:::... -->
    <div class="wishlist-section">
        <!-- Start Cart Table -->
        <div class="wishlish-table-wrapper" data-aos="fade-up" data-aos-delay="0">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="table_desc">
                            <div class="table_page table-responsive">
                                <table>
                                    <!-- Start Wishlist Table Head -->
                                    <thead>
                                        <tr>
                                            <th class="product_remove">Delete</th>
                                            <th class="product_thumb">Image</th>
                                            <th class="product_name">Product</th>
                                            <th class="product-price">Price</th>
                                            <th class="product_stock">Stock Status</th>
                                            <th class="product_addcart">Add To Cart</th>
                                        </tr>
                                    </thead> <!-- End Cart Table Head -->
                                    <tbody>
                                        <!-- Start Wishlist Single Item-->
                                        {{#each wishlist}}
                                        <tr>
                                            <td class="product_remove"> <button onclick="removeFromWishlist('{{this._id}}','{{this.product._id}}')" ><i class="fa fa-trash-o"></i></button> 
                                            </td>
                                            <td class="product_thumb"><a href="product-details-default.html"><img
                                                        src="/product-images/{{this.product.image.[0]}}"
                                                        alt=""></a></td>
                                            <td class="product_name"><a href="product-details-default.html">{{this.product.name}}</a></td>
                                            <td class="product-price">{{this.product.price}}</td>
                                            <td class="product_stock">In Stock</td>
                                            <td> <button class="btn-sm text-white bg-dark" type="submit" onclick="addToCart('{{this.product._id}}')" >Add to Cart</button> </td>
                                            {{!-- <td> <a  class="btn" onclick="addToCart('{{this._id}}')">Add</a></td> --}}
                                            
                                        </tr> 
                                        {{/each}}
                                        <!-- End Wishlist Single Item-->
                                       
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- End Cart Table -->
    </div> <!-- ...:::: End Wishlist Section:::... -->

