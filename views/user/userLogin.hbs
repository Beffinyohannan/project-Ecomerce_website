<body>
    
    <div class="vh-100 d-flex justify-content-center align-items-center">
        <div class="container">
          <div class="row d-flex justify-content-center">
          
            <!-- <div class="col-12 col-md-8 col-lg-6 "> -->
                <h2 class="fw-bold mb-2 text-uppercase  text-center">Login</h2>
              <div class="card " style="background:url(/user/images/login/61dfH5h3-2L._AC_SL1000_.jpg) ;background-size: contain ; background-repeat: no-repeat; width: 900px; height: 600px;">
                <div class="card-body mx-auto text-white">
                  <form class="mb-3 mt-md-4" action="/login" method="post">
                    <p class=" mb-5">Please enter your login and password!</p>
                    <div class="mb-3">
                      <label for="email" class="form-label ">Email address</label>
                      <input type="email" class="form-control " name="email" id="email" placeholder="name@example.com">
                    </div>
                    <div class="mb-3">
                      <label for="password" class="form-label ">Password</label>
                      <input type="password" class="form-control " name="password" id="password" placeholder="password">
                    </div>
                    <p class="small text-end"><a class="text-white" href="forget-password.html">Forgot password?</a></p>
                    <div class="d-grid text-white">
                      <button class="btn btn-outline-info" type="submit">Login</button> 
                    </div>
                  </form>
                  <div>
                    <p class="mb-0  text-center">Don't have an account? <a href="/signup" class="text-primary fw-bold">Sign
                        Up</a></p>
                  </div>
  
                </div>
              </div>
            <!-- </div> -->
          </div>
        </div>
      </div>
    

