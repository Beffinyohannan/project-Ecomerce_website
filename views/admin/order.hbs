<body>

    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->


    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">

        {{>adminHeader}}
        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">
            <div class="container-fluid">
                <!-- Add Order -->

                <div class="page-titles">
                    <ol class="breadcrumb">

                        <li class="breadcrumb-item active"><a href="javascript:void(0)">Orders</a></li>
                    </ol>
                </div>
                <!-- row -->


                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Users Datatable</h4>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="example3" class="display min-w850">
                                        <thead>
                                            <tr>
                                                <th>S No.</th>
                                                <th>Name</th>
                                                <th>Address</th>
                                                <th>Products</th>
                                                <th>Amount</th>
                                                <th>Payment</th>
                                                <th>Status</th>
                                                <th>Joining Date</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each order}}
                                            <tr>
                                                <td>{{inc @index}}</td>
                                                <td>{{this.address.name}}</td>
                                                <td><a href="javascript:void(0);">{{this.address.address}} <br>
                                                        {{this.deliveryDetails.number}}</a></td>
                                                <td>{{#each this.products}} <p>{{this.item}} </p>{{/each}}</td>
                                                <td><a href="javascript:void(0);"><strong
                                                            class="text-black">{{this.totalAmount}}</strong></a></td>
                                                <td>{{this.paymentMethod}}</td>
                                                <td id="{{this._id}}">{{this.status}}</td>
                                                <td> {{this.date}} </td>
                                                <td>

                                                    <div class="d-flex ">
                                                        <div class="basic-dropdown">
                                                            <div class="dropdown">
                                                                <button type="button"
                                                                    class="btn-sm btn-primary dropdown-toggle"
                                                                    data-toggle="dropdown">
                                                                    Status
                                                                </button>
                                                                <div class="dropdown-menu">
                                                                    {{!-- <a class="dropdown-item" href="#">Link 1</a> --}}
                                                                     <button
                                                                        class="btn btn-primary shadow btn-md sharp mr-1b-2"
                                                                        style="width: 110px; padding-top: 10px; "
                                                                        onclick="">Shipped
                                                                    </button>
                                                                    <button
                                                                        class="btn btn-primary shadow btn-md sharp mr-1b-2 mt-2"
                                                                        style="width: 110px; padding-top: 10px; "
                                                                        onclick="">Delivered
                                                                    </button>
                                                                    <button
                                                                        class="btn btn-primary shadow btn-md sharp mr-1b-2 mt-2"
                                                                        style="width: 110px; padding-top: 10px; "
                                                                        onclick="cancelOrder('{{this._id}}')">Cancel
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        {{!-- {{#if this.state}} --}}
                                                        {{!-- <a href="/admin/cancel-order/{{this._id}}"
                                                            class="btn btn-primary shadow btn-md sharp mr-1"
                                                            style="width: 95px;">Cancel</a> --}}
                                                        {{!-- <button class="btn btn-primary shadow btn-md sharp mr-1"
                                                            style="width: 95px;"
                                                            onclick="cancelOrder('{{this._id}}')">Cancel </button> --}}
                                                    </div>
                                                    {{!-- {{else}} --}}
                                                    {{!-- <a href="/admin/user/{{this._id}}"
                                                        class="btn btn-info shadow btn-md sharp"></a> --}}
                                                    {{!-- {{/if}} --}}
                                </div>
                                </td>
                                </tr>
                                {{/each}}
                                </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--**********************************
            Content body end
        ***********************************-->


